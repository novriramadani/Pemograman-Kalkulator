<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ac.id.poltekkampar.program1.MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/monitor"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="#f4f4"
            android:fontFamily="monospace"
            android:text="0"
            android:textColor="#5C0AEF"
            android:textSize="23dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tujuh"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="7"
                android:textSize="23dp" />

            <Button
                android:id="@+id/delapan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="8"
                android:textSize="23dp" />

            <Button
                android:id="@+id/sembilan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="9"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/empat"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="4"
                android:textSize="23dp" />

            <Button
                android:id="@+id/lima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="5"
                android:textSize="23dp" />

            <Button
                android:id="@+id/enam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="6"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/satu"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="1"
                android:textSize="23dp" />

            <Button
                android:id="@+id/dua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="2"
                android:textSize="23dp" />

            <Button
                android:id="@+id/tiga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="3"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/nol"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="0"
                android:textSize="23dp" />

            <Button
                android:id="@+id/koma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="."
                android:textSize="23dp" />

            <Button
                android:id="@+id/hapus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="C"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/kurang1"
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="-"
                android:textSize="23dp" />

            <Button
                android:id="@+id/tambah1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="+"
                android:textSize="23dp" />

            <Button
                android:id="@+id/bagi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F4DC06"
                android:fontFamily="monospace"
                android:text="/"
                android:textSize="23dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/kali1"
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F4DC06"
                    android:fontFamily="monospace"
                    android:text="*"
                    android:textSize="23dp" />

                <Button
                    android:id="@+id/samadengan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F4DC06"
                    android:fontFamily="monospace"
                    android:text="="
                    android:textSize="23dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>